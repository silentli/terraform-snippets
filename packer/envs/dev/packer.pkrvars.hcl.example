# Packer Build Variables - Dev Environment
# Usage: packer build -var-file="envs/dev/packer.pkrvars.hcl" packer.pkr.hcl

# AWS Configuration
aws_region = "us-east-1"

# Project Configuration
project_name = "terraform-snippets"
environment  = "dev"

# Build Configuration
instance_type = "t3.micro"
ami_name      = "nginx-ami"

# IAM Configuration
# Get this value from: cd 03-packer-iam && terraform output -raw instance_profile_name
# After deploying 03-packer-iam with: terraform apply -var-file="envs/dev/packer.tfvars"
iam_instance_profile = "terraform-snippets-packer-dev"

# Network Configuration (optional - if not specified, uses default VPC)
# These can be passed via CI/CD PKR_VAR_* environment variables
# subnet_id = ""  # Optional: Set via PKR_VAR_subnet_id in CI/CD
# vpc_id    = ""  # Optional: Set via PKR_VAR_vpc_id in CI/CD
