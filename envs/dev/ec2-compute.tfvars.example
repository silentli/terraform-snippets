# Compute Layer - Dev Environment
# EC2 instances and compute resources

# Project Configuration
project_name = "terraform-snippets"
environment  = "dev"

# Compute Configuration
ami_id         = "ami-0c02fb55956c7d316"  # Amazon Linux 2 AMI
instance_type  = "t2.micro"
instance_name  = "terraform-instance-dev"

# SSM Session Manager (Recommended - no SSH keys needed)
enable_policies = true
policy_arns = {
  ssm = "arn:aws:iam::aws:policy/AmazonSSMManagedInstanceCore"
}

# SSH Access (Optional - only if needed)
# enable_ssh = true
# key_name  = "the-key-pair-name"

# Network State (from bootstrap output)
network_state_bucket = "terraform-snippets-state-dev"
aws_region          = "us-east-1"
